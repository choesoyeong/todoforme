{
  "name": "todoforme",
  "version": "1.0.0",
  "description": "üçé Í∑ÄÏó¨Ïö¥ Îß•Ïö© Îç∞Ïä§ÌÅ¨ÌÉë Ìà¨Îëê Ïï±",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc src/main/main.ts --outDir dist/main --target ES2020 --module CommonJS --moduleResolution node --esModuleInterop --skipLibCheck",
    "build:preload": "tsc src/main/preload.ts --outDir dist/main --target ES2020 --module CommonJS --moduleResolution node --esModuleInterop --skipLibCheck",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "npm run build:main -- --watch",
    "dev:renderer": "vite",
    "start": "electron .",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.6"
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.todoforme.app",
    "productName": "TodoForMe",
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons/icon.png"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ]
  }
}